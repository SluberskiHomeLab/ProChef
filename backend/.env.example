# ProChef Backend Configuration

# Server Configuration
NODE_ENV=development
PORT=4000

# Security
SECRET=supersecretjwtkey-change-this-in-production

# Database Configuration
# Supported types: mysql, postgresql, sqlite, mssql
DATABASE_TYPE=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=cookbook
DATABASE_USER=root
DATABASE_PASSWORD=mysecretpassword

# For SQLite (when DATABASE_TYPE=sqlite)
# DATABASE_FILE=./cookbook.db

# For PostgreSQL (when DATABASE_TYPE=postgresql)
# DATABASE_PORT=5432
# DATABASE_USER=postgres

# For MSSQL (when DATABASE_TYPE=mssql)  
# DATABASE_PORT=1433

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Email Configuration (for MFA and notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@prochef.local

# Recipe Import Configuration
# RECIPE_IMPORT_TIMEOUT=30000
# RECIPE_IMPORT_MAX_SIZE=1048576

# Performance Configuration
# ENABLE_CACHING=true
# CACHE_TTL=3600